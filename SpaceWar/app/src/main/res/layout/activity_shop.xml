<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context="com.example.agentzengyu.spacewar.activity.ShopActivity">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/shop_money" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="$10000" />

        <android.support.v4.widget.CircleImageView
            android:id="@+id/civWeapon"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:src="@mipmap/ic_launcher_round"
            app:border_color="#80000000"
            app:border_overlay="false"
            app:border_width="5dp" />

        <android.support.v4.widget.CircleImageView
            android:id="@+id/civSpaceship"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:src="@mipmap/ic_launcher_round"
            app:border_color="#80000000"
            app:border_overlay="false"
            app:border_width="5dp" />

        <android.support.v4.widget.CircleImageView
            android:id="@+id/civReturn"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:src="@mipmap/ic_launcher_round"
            app:border_color="#80000000"
            app:border_overlay="false"
            app:border_width="5dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

    </FrameLayout>

</LinearLayout>
