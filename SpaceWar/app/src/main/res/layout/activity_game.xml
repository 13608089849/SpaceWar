<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.example.agentzengyu.spacewar.activity.GameActivity">

    <com.example.agentzengyu.spacewar.view.GameSurfaceView
        android:id="@+id/gsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvLife"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Life" />

    <TextView
        android:id="@+id/tvShield"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Shield" />

    <TextView
        android:id="@+id/tvLaser"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Bomb" />

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Map" />

    <com.example.agentzengyu.spacewar.view.CircleImageView
        android:id="@+id/civShield"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:focusable="true"
        android:src="@mipmap/ic_launcher_round"
        app:border_color="#80000000"
        app:border_overlay="false"
        app:border_width="5dp" />

    <com.example.agentzengyu.spacewar.view.CircleImageView
        android:id="@+id/civLaser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:focusable="true"
        android:src="@mipmap/ic_launcher_round"
        app:border_color="#80000000"
        app:border_overlay="false"
        app:border_width="5dp" />

    <com.example.agentzengyu.spacewar.view.CircleImageView
        android:id="@+id/civShot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:focusable="true"
        android:src="@mipmap/ic_launcher_round"
        app:border_color="#80000000"
        app:border_overlay="false"
        app:border_width="5dp" />

    <TextView
        android:id="@+id/tvNotify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc050505"
        android:gravity="center"
        android:textColor="#ffffff" />

</RelativeLayout>
